conda.enabled = true

params { 
    // required 
    hifi_reads = '/data2/work/Notothenioids/Lsquam3/PacBio_CCS'
    hic1 = '/data2/work/Notothenioids/Lsquam3/Lsquam3_HiC_data/Lsquam3_GCTACTCT-CTCGAACA_L004_R1_001.fastq.gz'
    hic2 = '/data2/work/Notothenioids/Lsquam3/Lsquam3_HiC_data/Lsquam3_GCTACTCT-CTCGAACA_L004_R2_001.fastq.gz'
    specimen_id = 'Lsquam3'
	taxid = '101496'

    nthreads = 18
    est_ref_size = 1000000000 // for quast, i might remove this in the future
    
    // Tool paths
    yahs = '/data2/work/local/yahs' // Path to YaHS installation
    samblaster = '/data2/work/local/samblaster/samblaster' // Path to samblaster
    juicer_tools = '/data2/work/local/juicer_tools/juicer_tools.2.20.00.jar' // Path to juicer tools
    
    // Conda environments
	nextflow_env = '/data2/work/local/miniconda/envs/nextflow'
    bwa_mem_env = '/data2/work/local/miniconda/envs/salsa' // Conda environment for bwa-mem2
    busco_conda = '/data2/work/local/miniconda/envs/busco583' // Conda environment for busco
    quast_conda = '/data2/work/local/miniconda/envs/quast' // Conda environment for quast
	mqc_conda = '/data2/work/local/miniconda/envs/multiqc' // multiqc
    
    // BUSCO parameters
    busco_lineage = 'actinopterygii_odb12' // BUSCO lineage database
    busco_db_path = '/data2/busco_June2024/busco_downloads' // Path to BUSCO database
    
    // Output directory
    outdir = './results'
}

executor {
	name = 'local'
    cpus = 24 // Limit local executor to 4 CPUs
}
